<div class="max-w-5xl mx-auto px-4 py-8 animate-fade-in-up">
  <!-- Back Button -->
  <div class="mb-6">
    <a href="/admin"
      class="inline-flex items-center text-neutral-600 dark:text-neutral-400 hover:text-primary-600 dark:hover:text-primary-400 transition-colors">
      <i class="fas fa-arrow-left mr-2"></i>
      Back to Library
    </a>
  </div>

  <div class=" bg-white dark:bg-neutral-800 rounded-2xl overflow-hidden">
    <div class="flex flex-col md:flex-row">
      <!-- Cover Image Section -->
      <div
        class="w-[128px] md:w-32 lg:w-64 bg-neutral-100 dark:bg-neutral-900 border-r border-neutral-200 dark:border-neutral-700 flex-shrink-0">
        <div class="aspect-[2/3] relative group">
          <img src="/book/cover/{{filename}}" alt="{{book.title}}" class="w-full h-full object-cover"
            onerror="this.onerror=null;this.src='/static/no-cover-error.svg';">
        </div>
      </div>

      <!-- Details Section -->
      <div class="w-full p-8 flex flex-col">
        <div class="flex-grow">
          <!-- Title & Author -->
          <h1 class="text-3xl font-bold text-neutral-900 dark:text-white mb-2 leading-tight">
            {{#if book.title}}{{book.title}}{{else}}Unknown Title{{/if}}
          </h1>
          <p class="text-xl text-primary-600 dark:text-primary-400 font-medium mb-6">
            {{#if book.creator}}{{book.creator}}{{else}}Unknown Author{{/if}}
          </p>

          <!-- Description -->
          {{#if book.description}}
          <div class="prose dark:prose-invert max-w-none mb-8 text-neutral-600 dark:text-neutral-300">
            {{{book.description}}}
          </div>
          {{/if}}

          <!-- Metadata Grid -->
          <div
            class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8 bg-neutral-50 dark:bg-neutral-800/50 p-6 rounded-xl border border-neutral-100 dark:border-neutral-700">
            {{#if book.publisher}}
            <div>
              <span class="text-xs font-semibold text-neutral-400 uppercase tracking-wider">Publisher</span>
              <p class="text-neutral-700 dark:text-neutral-200">{{book.publisher}}</p>
            </div>
            {{/if}}
            {{#if book.language}}
            <div>
              <span class="text-xs font-semibold text-neutral-400 uppercase tracking-wider">Language</span>
              <p class="text-neutral-700 dark:text-neutral-200">{{book.language}}</p>
            </div>
            {{/if}}
            {{#if book.date}}
            <div>
              <span class="text-xs font-semibold text-neutral-400 uppercase tracking-wider">Date</span>
              <p class="text-neutral-700 dark:text-neutral-200">{{book.date}}</p>
            </div>
            {{/if}}
            {{#if book.identifier}}
            <div class="sm:col-span-2">
              <span class="text-xs font-semibold text-neutral-400 uppercase tracking-wider">Identifier / ISBN</span>
              <p class="text-neutral-700 dark:text-neutral-200 font-mono text-sm break-all">{{book.identifier}}</p>
            </div>
            {{/if}}
          </div>
        </div>

        <!-- Actions -->
        <div class="flex flex-col sm:flex-row gap-4 mt-auto pt-6">
          <a href="/book/{{filename}}" download
            class="btn-primary flex-1 text-center justify-center inline-flex items-center px-6 py-3 rounded-xl bg-primary-600 hover:bg-primary-700 text-white font-semibold">
            <i class="fas fa-download mr-2"></i> Download Book
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
