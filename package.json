{
  "name": "opdshelf",
  "version": "1.0.0",
  "description": "OPDS Server using Bun + Hono",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build:css": "bunx @tailwindcss/cli -i ./src/styles/input.css -o ./static/styles/main.css",
    "start": "bun run src/index.ts"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "adm-zip": "^0.5.10",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "hono": "^4.0.0",
    "mime-types": "^2.1.35",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/adm-zip": "^0.5.5",
    "@types/fs-extra": "^11.0.4",
    "@types/mime-types": "^2.1.4",
    "bun-types": "latest"
  }
}
